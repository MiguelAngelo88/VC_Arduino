import serial
import matplotlib.pyplot as plt
import numpy as np

plt.ion()
fig = plt.figure()

i = 0
x = list()
y = list()

ser = serial.Serial('COM3', 115200)
ser.close()
ser.open()

while True:
    data = ser.readline().decode().strip()
    print(data)
    x.append(i)
    y.append(data)

    plt.plot(x, y, color='b')
    plt.xlabel('Time')
    plt.ylabel('Potentiometer Reading')
    plt.title('Serial data comunication')
    plt.grid(True)
    plt.show()
    plt.pause(0.0001)  # Note this correction
    i += 1

